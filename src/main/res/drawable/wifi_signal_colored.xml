        <level-list>
            <item settings:maxLevel="0">
                <bitmap settings:src="@drawable/ic_wifi_lock_signal_1_light" settings:tint="?attr/wifi_signal_color" />
            </item>
            <item settings:maxLevel="1">
                <bitmap settings:src="@drawable/ic_wifi_lock_signal_2_light" settings:tint="?attr/wifi_signal_color" />
